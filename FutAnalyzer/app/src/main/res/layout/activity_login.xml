<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card"
        android:src="@drawable/ic_home_black_24dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvLoginUsuario"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/nome_login"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:background="@drawable/fundo_edit_text"
            android:id="@+id/etLoginUsuario"
            android:layout_width="300dp"
            android:layout_marginTop="8dp"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tvLoginUsuario"
            app:layout_constraintStart_toStartOf="@+id/tvLoginUsuario" />

        <TextView
            android:id="@+id/tvSenhaUsuario"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/senha_login"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etLoginUsuario"
            app:layout_constraintStart_toStartOf="@+id/etLoginUsuario" />

        <EditText
            android:background="@drawable/fundo_edit_text"
            android:id="@+id/etSenhaUsuario"
            android:layout_width="300dp"
            android:layout_marginTop="8dp"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:layout_height="50dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/tvSenhaUsuario"
            app:layout_constraintStart_toStartOf="@+id/tvLoginUsuario"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/btEntrarLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:padding="16dp"
            android:text="@string/entrar_login"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etSenhaUsuario" />

        <Button
            android:id="@+id/btCadastrarLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:padding="16dp"
            android:text="@string/cadastrar_login"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btEntrarLogin" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>